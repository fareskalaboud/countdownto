{
   "name": "countdownto",
   "description" : "A minimal page to keep track of countdowns.",
   "version": "0.1",
   "manifest_version": 2,
   "chrome_url_overrides" : {
     "newtab": "src/index.html"
   },
   "permissions": [
         "storage"
   ],
   "background": {
      "scripts": ["src/assets/js/bg.js"],
      "persistent": false
    },
   "browser_action": {
      "default_icon": "logo.png"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+T",
          "mac": "Command+T"
        },
        "description": "Opens hello.html"
      }
    },
    "icons": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
 }
